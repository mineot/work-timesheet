{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src/"],
  "paths": {
    "@/*": ["./src/*"],
    "@plugins/*": ["./src/plugins/*"],
  },
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}